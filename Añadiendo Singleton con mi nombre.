using System;
using System.Collections.Generic;
using System.Text;

namespace EjemploSingleton
{
    public class SingletonExample1
    {
        // Los m�todos est�ticos son los que no necesitan 
        // crear una instancia de la clase para ser utilizados.
        public static SingletonExample1 instancia;

        // Aqu� personalizamos con tu nombre
        public string nombre = "Heriberto Josue";
        public Guid Id { get; set; }

        // El constructor es privado para evitar
        // que se instancie desde fuera de la clase.
        private SingletonExample1()
        {
            Id = Guid.NewGuid();
        }

        // M�todo para obtener la instancia �nica (Patr�n Singleton)
        public static SingletonExample1 GetInstance()
        {
            if (instancia == null)
            {
                instancia = new SingletonExample1();
            }
            return instancia;
        }
    }
}
